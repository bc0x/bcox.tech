{
  "parser": "babel-eslint",
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier/standard",
    "prettier/react",
    "prettier/babel"
  ],
  "plugins": ["babel", "react", "prettier"],
  "rules": {
    "react/prop-types": 1,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  }
}
